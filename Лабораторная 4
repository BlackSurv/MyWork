		<script>
			JS.hidden = true;
			text.onclick = function button()
			{
				let textCoords= this.getBoundingClientRect();
				document.body.style.overflow = "hidden";
				JS.hidden = false;
				JS.style.top = event.clientY - textCoords.top - text.clientTop - JS.clientHeight / 2 + 'px';
				JS.style.left = event.clientX - textCoords.left - text.clientLeft - JS.clientWidth / 2 + 'px';
				}
		</script>
